<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#3CF7F7">
        <Button
            android:id="@+id/menuPop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_more_vert_black"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/authentication"
            android:scaleType="fitXY"
            android:id="@+id/imgProfile"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="Chọn Hình"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgProfile"
            android:id="@+id/btnEditImg"
            android:background="#0EA9F1"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/fullname_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#f0f0f4"
            android:drawableLeft="@drawable/fullname"
            android:drawablePadding="16dp"
            android:fontFamily="sans-serif"
            android:hint="Họ và tên"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="#000"
            android:layout_below="@id/btnEditImg"
            />
        <EditText
            android:id="@+id/address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:inputType="text"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="16dp"
            android:fontFamily="sans-serif"
            android:layout_below="@id/fullname_info"
            />
        <EditText
            android:id="@+id/mal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="text"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="16dp"
            android:fontFamily="sans-serif"
            android:layout_below="@id/address_info"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10"
            android:layout_below="@id/mal_info"
            android:id="@+id/layoutPhone">
            <Spinner
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#f0f0f4"
                android:id="@+id/list_code_info">

            </Spinner>

            <EditText
                android:layout_weight="7"
                android:id="@+id/phone_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#000"
                android:background="#f0f0f4"
                android:padding="12dp"
                android:drawablePadding="16dp"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="5dp"

                />
        </LinearLayout>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioSex"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/layoutPhone">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:layout_marginRight="5dp"
                android:id="@+id/radioMale_info"
                android:fontFamily="sans-serif"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Nữ"
                android:id="@+id/radioFemale_info"
                android:fontFamily="sans-serif"/>
        </RadioGroup>
        <Button
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0EA9F1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="14dp"
            android:text="Thay đổi"
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_below="@id/radioSex"
            />

    </RelativeLayout>

</ScrollView>