<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CF7F7"
    android:padding="10dp">

    <Button
        android:id="@+id/menuPop"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_more_vert_black" />

    <Button
        android:id="@+id/btnEditImg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/imgProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#0EA9F1"
        android:text="Chọn Hình"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioSex"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp"
        android:background="#0EA9F1"
        android:padding="14dp"
        android:text="Thay đổi"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullname_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#f0f0f4"
        android:drawableLeft="@drawable/address"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif"
        android:hint="Địa chỉ"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/mal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#f0f0f4"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif"
        android:hint="E-mail"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/fullname_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEditImg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#f0f0f4"
        android:drawableLeft="@drawable/fullname"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif"
        android:hint="Họ và tên"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/authentication" />


    <LinearLayout
        android:id="@+id/layoutPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mal_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:weightSum="10">
        <Spinner
            android:id="@+id/list_code_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#f0f0f4">

        </Spinner>

        <EditText
            android:id="@+id/phone_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="7"
            android:background="#f0f0f4"
            android:drawablePadding="16dp"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#000" />


    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutPhone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioMale_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="sans-serif"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/radioFemale_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif"
            android:text="Nữ" />
    </RadioGroup>
</RelativeLayout>
