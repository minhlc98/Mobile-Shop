<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_Authentication"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/authentication" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác thực người dùng"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#7AA0F7"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Nhập mã xác thực"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_keyboard_black_24dp"
        android:id="@+id/edtCode"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác thực"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:id="@+id/btnXacThuc"
            android:layout_marginRight="25dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi lại"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:id="@+id/btnGuiLai"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Mã xác thực sẽ được gửi đến số điện thoại +84938965143 trong vòng 1 phút"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tvNote"/>
</LinearLayout>