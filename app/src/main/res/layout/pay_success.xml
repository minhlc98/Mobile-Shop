<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/thanh_toan_thanh_cong"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp">
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/image_close"
        android:layout_gravity="top|right"
        android:id="@+id/image_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/title_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt hàng thành công !"
        android:textColor="#ff0d00"
        android:textStyle="bold"
        android:textSize="21dp"
        app:layout_constraintTop_toBottomOf="@id/image_close"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/success1"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/title_success"
        app:layout_constraintTop_toBottomOf="@id/image_close"/>
    <TextView
        android:id="@+id/txtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng của bạn là "
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_success"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có thể vào phần KIỂM TRA để xem đơn hàng"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtID"
        />


</androidx.constraintlayout.widget.ConstraintLayout>