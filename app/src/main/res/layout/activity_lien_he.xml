<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nhocs.demonavigation.Activity.LienHe">
    <android.support.v7.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#5050ed"
        app:titleTextColor="#FFFFFF"
        app:title="Liên Hệ"
        android:id="@+id/toolbarLienHe">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="200dp"
        android:layout_height="255dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toBottomOf="@id/toolbarLienHe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/lbFacebook"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f51642"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintRight_toLeftOf="@id/fb_name"/>
    <TextView
        android:id="@+id/fb_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Cẩm Minh"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#e1afaf"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintLeft_toRightOf="@id/lbFacebook"/>
    <TextView
        android:id="@+id/lbZalo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Zalo"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f51642"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/lbFacebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/zalo_name"
        />
    <TextView
        android:id="@+id/zalo_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="01285428605"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#e1afaf"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/fb_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lbZalo"/>
    <TextView
        android:id="@+id/lbDienThoai"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Điện thoại"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f51642"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/lbZalo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dienThoai"/>
    <TextView
        android:id="@+id/dienThoai"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="0938965143"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#e1afaf"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/zalo_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lbDienThoai"/>
    <TextView
        android:id="@+id/lbEmail"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f51642"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/lbDienThoai"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Email"/>
    <TextView
        android:id="@+id/Email"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="minhlc98@gmail.com"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#e1afaf"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/dienThoai"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lbEmail"/>

</android.support.constraint.ConstraintLayout>